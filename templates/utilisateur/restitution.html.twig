                            <option value="2">iPhone 14 Pro (IT-045) - Pierre Lambert</option>
                            <option value="3">MacBook Pro 16" (IT-023) - Sophie Martin</option>
                            <option value="4">ThinkPad T14 (IT-078) - Thomas Bernard</option>
                        </select>
                    </div>

                    <!-- Date de restitution -->
                    <div>
                        <label for="returnDate" class="block text-sm font-medium text-gray-700 mb-1">Date de Restitution</label>
                        <input type="date" id="returnDate"
                               class="block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                               value="{{ 'now'|date('Y-m-d') }}">
                    </div>
                </div>

                <!-- État de l'actif -->
