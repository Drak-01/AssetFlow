        <!-- Tableau des restitutions -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Historique des Restitutions
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    {{ restitutions|length }} restitution(s) au total
                </p>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Utilisateur
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actif Restitué
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Date Attribution
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Date Restitution
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            État
                        </th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for restitution in restitutions %}
                        <tr class="hover:bg-gray-50 {% if restitution.etat == 'pending' %}bg-yellow-50{% endif %}">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold">
                                            {{ restitution.employe.firstname|first|upper }}{{ restitution.employe.lastname|first|upper }}
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ restitution.employe.firstname }} {{ restitution.employe.lastname }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ restitution.employe.departement.nom }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-8 w-8">
                                        <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
                                            <i class="fas fa-laptop text-blue-600 text-sm"></i>
                                        </div>
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ restitution.attribution.actif.name }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ restitution.attribution.actif.serie }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    {{ restitution.attribution.dateAttribution|date('d/m/Y') }}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {% set diffAttribution = date().diff(restitution.attribution.dateAttribution) %}
                                    {{ diffAttribution.y > 0 ? diffAttribution.y ~ ' an(s)' : diffAttribution.m ~ ' mois' }}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    {{ restitution.createdAt|date('d/m/Y') }}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {% set diffRestitution = date().diff(restitution.createdAt) %}
                                    {% if diffRestitution.d == 0 %}
                                        Aujourd'hui
                                    {% else %}
                                        Il y a {{ diffRestitution.d }} jour(s)
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col space-y-1">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if restitution.etat == 'excellent' %}bg-green-100 text-green-800
                                        {% elseif restitution.etat == 'bon' %}bg-blue-100 text-blue-800
                                        {% elseif restitution.etat == 'moyen' %}bg-yellow-100 text-yellow-800
                                        {% elseif restitution.etat == 'mauvais' %}bg-orange-100 text-orange-800
                                        {% else %}bg-red-100 text-red-800{% endif %}">
                                        <i class="fas
                                            {% if restitution.etat == 'excellent' %}fa-check-circle
                                            {% elseif restitution.etat == 'bon' %}fa-thumbs-up
                                            {% elseif restitution.etat == 'moyen' %}fa-minus-circle
                                            {% elseif restitution.etat == 'mauvais' %}fa-exclamation-triangle
                                            {% else %}fa-times-circle{% endif %} mr-1">
                                        </i>
                                        {{ restitution.etat|capitalize }}
                                    </span>
{#                                    {% if restitution.equipementComplet %}#}
{#                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">#}
{#                                            Complet#}
{#                                        </span>#}
{#                                    {% endif %}#}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end space-x-2">
                                    <button class="text-blue-600 hover:text-blue-900" title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="text-green-600 hover:text-green-900" title="Télécharger PV">
                                        <i class="fas fa-file-pdf"></i>
                                    </button>
                                    {% if restitution.etat == 'pending' %}
                                        <button class="text-red-600 hover:text-red-900" title="Annuler">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                                Aucune restitution trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
