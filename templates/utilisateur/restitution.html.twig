{% extends 'partials/layout.html.twig' %}

{% block content %}
    <!-- ========================= Contenu principal ======================== -->
    <div class="max-w-7xl mx-auto">

        <!-- En-tête de page -->
        <div class="md:flex md:items-center md:justify-between mb-6">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    <i class="fas fa-undo-alt mr-3 text-blue-600"></i>
                    Restitution des Actifs
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Gérez les retours d'actifs et les processus de restitution
                </p>
            </div>
            <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
                <button type="button"
                        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-file-export mr-2"></i>
                    Exporter
                </button>
                <a href=""
                   class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-undo mr-2"></i>
                    Nouvelle Restitution
                </a>
            </div>
        </div>

        <!-- Statistiques rapides -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-6">
            <!-- Restitutions ce mois -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-calendar-minus text-3xl text-blue-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Ce Mois</dt>
                                <dd class="text-lg font-semibold text-gray-900">{{ stats.ceMois ?? 0 }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- En attente de traitement -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-clock text-3xl text-yellow-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">En Attente</dt>
                                <dd class="text-lg font-semibold text-gray-900">{{ stats.enAttente ?? 0 }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Restitutions en retard -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-3xl text-red-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">En Retard</dt>
                                <dd class="text-lg font-semibold text-gray-900">{{ stats.enRetard ?? 0 }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Taux de restitution -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-percentage text-3xl text-green-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Taux de Retour</dt>
                                <dd class="text-lg font-semibold text-gray-900">{{ stats.tauxRetour ?? '0%' }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulaire de restitution rapide -->
        <div class="bg-white shadow rounded-lg mb-6">
            {{ form_start(form, {'attr': {'class': 'restitution-form'}}) }}
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    <i class="fas fa-bolt mr-2 text-yellow-500"></i>
                    Restitution Rapide
                </h3>

                {% if not form.vars.valid %}
                    <div class="mb-4 rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-circle text-red-400"></i>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">
                                    Veuillez corriger les erreurs suivantes :
                                </h3>
                                <div class="mt-2 text-sm text-red-700">
                                    {{ form_errors(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <!-- Sélection attribution -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.attribution) }}
                        </label>
                        {{ form_widget(form.attribution, {
                            'attr': {
                                'class': "block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                            }
                        }) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.attribution) }}
                        </div>
                    </div>

                    <!-- Date de restitution -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.dateRestitution) }}
                        </label>
                        {{ form_widget(form.dateRestitution, {
                            'attr': {
                                'class': "block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                            }
                        }) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.dateRestitution) }}
                        </div>
                    </div>
                </div>

                <!-- État de l'actif -->
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        {{ form_label(form.etat) }}
                    </label>
                    {{ form_widget(form.etat, {
                        'attr': {
                            'class': "grid grid-cols-2 gap-4 sm:grid-cols-5"
                        }
                    }) }}
                    <div class="text-red-600 text-xs mt-1">
                        {{ form_errors(form.etat) }}
                    </div>
                </div>

                <!-- Checklist de vérification -->
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        {{ form_label(form.checkList) }}
                    </label>
                    <div class="space-y-2">
                        {{ form_widget(form.checkList) }}
                    </div>
                    <div class="text-red-600 text-xs mt-1">
                        {{ form_errors(form.checkList) }}
                    </div>
                </div>

                <!-- État détaillé de l'équipement -->
                <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.equipementComplet) }}
                        </label>
                        {{ form_widget(form.equipementComplet) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.equipementComplet) }}
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.rayures) }}
                        </label>
                        {{ form_widget(form.rayures) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.rayures) }}
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_label(form.fonctionnel) }}
                        </label>
                        {{ form_widget(form.fonctionnel) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.fonctionnel) }}
                        </div>
                    </div>
                </div>

                <!-- Notes et observations -->
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        {{ form_label(form.observation) }}
                    </label>
                    {{ form_widget(form.observation, {
                        'attr': {
                            'rows': '3',
                            'class': "block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                            'placeholder': "Décrivez l'état de l'actif, les éventuels dommages, accessoires manquants..."
                        }
                    }) }}
                    <div class="text-red-600 text-xs mt-1">
                        {{ form_errors(form.observation) }}
                    </div>
                </div>

                <!-- Notes technicien -->
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        {{ form_label(form.notesTechnicien) }}
                    </label>
                    {{ form_widget(form.notesTechnicien, {
                        'attr': {
                            'rows': '2',
                            'class': "block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                            'placeholder': "Notes internes pour le service technique..."
                        }
                    }) }}
                    <div class="text-red-600 text-xs mt-1">
                        {{ form_errors(form.notesTechnicien) }}
                    </div>
                </div>

                <div class="mt-6 flex justify-end space-x-3">
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-check mr-2"></i>
                        Confirmer la Restitution
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

