<!-- Modal d'ajout d'utilisateur -->
<div x-show="openUserModal"
     x-cloak
     class="fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <!-- Overlay -->
        <div x-show="openUserModal"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
             aria-hidden="true"
             @click="openUserModal = false">
        </div>

        <!-- Espace pour centrer le modal -->
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        <!-- Contenu du modal -->
        <div x-show="openUserModal"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">

            <!-- En-tête du modal -->
            <div class="sm:flex sm:items-start">
                <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm:w-10">
                    <i class="fas fa-user-plus text-blue-600"></i>
                </div>
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                    <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                        Ajouter un Nouvel Utilisateur
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                        Remplissez les informations pour créer un nouveau compte utilisateur.
                    </p>
                </div>
            </div>

            <!-- Formulaire -->
            <div class="mt-6 space-y-4">
                {{ form_start(form) }}
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <!-- Matricule -->
                    <div>
                        <label for="matricule" class="block text-sm font-medium text-gray-700">
                            Matricule *
                        </label>
                        {{
                            form_widget(form.matricule, {
                                'attr':{
                                    class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                }
                            })
                        }}
                    </div>

                    <!-- Statut -->
                    <div>
                        <label for="statut" class="block text-sm font-medium text-gray-700">
                            Statut *
                        </label>
                        {{
                            form_widget(form.status, {
                                'attr':{
                                    class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                }
                            })
                        }}
                    </div>
                </div>

                <!-- Nom -->
                <div>
                    <label for="nom" class="block text-sm font-medium text-gray-700">
                        Firstname *
                    </label>
                    {{
                    form_widget(form.firstname, {
                        'attr':{
                            class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        }
                    })
                    }}
                </div>

                <!-- Prénom -->
                <div>
                    <label for="prenom" class="block text-sm font-medium text-gray-700">
                        Lastname *
                    </label>
                    {{
                    form_widget(form.lastname, {
                        'attr':{
                            class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        }
                    })
                    }}
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">
                        Email *
                    </label>
                    {{
                    form_widget(form.email, {
                        'attr':{
                            class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        }
                    })
                    }}
                </div>

                <!-- Téléphone -->
                <div>
                    <label for="telephone" class="block text-sm font-medium text-gray-700">
                        Téléphone
                    </label>
                    {{
                    form_widget(form.phone, {
                        'attr':{
                            class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        }
                    })
                    }}
                </div>

                <!-- Département -->
                <div>
                    <label for="departement" class="block text-sm font-medium text-gray-700">
                        Département *
                    </label>
                    {{
                    form_widget(form.departements, {
                        'attr':{
                            class : "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                        }
                    })
                    }}
                </div>

{#                <!-- Poste -->#}
{#                <div>#}
{#                    <label for="poste" class="block text-sm font-medium text-gray-700">#}
{#                        Poste *#}
{#                    </label>#}
{#                    <input type="text"#}
{#                           id="poste"#}
{#                           x-model="userForm.poste"#}
{#                           required#}
{#                           class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"#}
{#                           placeholder="Développeur">#}
{#                </div>#}

                <div class="mt-6 sm:flex sm:flex-row-reverse">
                    <button type="submit"
                            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm"
                    >
                        <span>Enregistre</span>
                    </button>
                    <button type="button"
                            @click="openUserModal = false; resetUserForm()"
                            :disabled="isSubmitting"
                            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Annuler
                    </button>

                </div>

                {{ form_end(form) }}
            </div>

            <!-- Pied du modal -->


            <!-- Message d'erreur -->
            <div x-show="errorMessage"
                 x-transition
                 class="mt-4 p-3 bg-red-50 border border-red-200 rounded-md">
                <div class="flex">
                    <i class="fas fa-exclamation-circle text-red-400 mt-0.5 mr-2"></i>
                    <p class="text-sm text-red-600" x-text="errorMessage"></p>
                </div>
            </div>
        </div>
    </div>
</div>
