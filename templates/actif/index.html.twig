{% extends 'partials/layout.html.twig' %}

{% block content %}
    <!-- ========================= Contenu principal ======================== -->
    <div class="max-w-7xl mx-auto">
        <!-- En-tête de page -->
        <div class="md:flex md:items-center md:justify-between mb-6">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    <i class="fas fa-boxes mr-3 text-blue-600"></i>
                    Gestion des Inventaires
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Gérez le parc informatique et suivez l'état des actifs
                </p>
            </div>
            <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
                <button type="button"
                        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-file-export mr-2"></i>
                    Exporter
                </button>
            </div>
        </div>

        <!-- Statistiques rapides -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-6">
            <!-- Total actifs -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-laptop text-3xl text-blue-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Total Actifs
                                </dt>
                                <dd class="text-lg font-semibold text-gray-900">
                                    {{ stats.total|default(0) }}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- En stock -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-warehouse text-3xl text-green-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    En Stock
                                </dt>
                                <dd class="text-lg font-semibold text-gray-900">
                                    {{ stats.stock|default(0) }}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Attribués -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-user-check text-3xl text-purple-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    Attribués
                                </dt>
                                <dd class="text-lg font-semibold text-gray-900">
                                    {{ stats.assigned|default(0) }}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- En réparation -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-tools text-3xl text-yellow-500"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">
                                    En Réparation
                                </dt>
                                <dd class="text-lg font-semibold text-gray-900">
                                    {{ stats.maintenance|default(0) }}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Barre de filtres et recherche -->
        <div class="bg-white shadow rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
                <form method="GET" action="{{ path('inventaire_index') }}">
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
                        <!-- Recherche -->
                        <div class="sm:col-span-2">
                            <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Recherche</label>
                            <div class="relative rounded-md shadow-sm">
                                <input type="text"
                                       id="search"
                                       name="search"
                                       value="{{ app.request.get('search') }}"
                                       class="block w-full pr-10 border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                       placeholder="Nom, numéro de série, modèle...">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i class="fas fa-search text-gray-400"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Filtre catégorie -->
                        <div>
                            <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Catégorie</label>
                            <select id="category"
                                    name="category"
                                    class="block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">Toutes les catégories</option>
                                <option value="ordinateur_portable" {{ app.request.get('category') == 'ordinateur_portable' ? 'selected' : '' }}>Ordinateur Portable</option>
                                <option value="ordinateur_bureau" {{ app.request.get('category') == 'ordinateur_bureau' ? 'selected' : '' }}>Ordinateur Bureau</option>
                                <option value="telephone" {{ app.request.get('category') == 'telephone' ? 'selected' : '' }}>Téléphone</option>
                                <option value="tablette" {{ app.request.get('category') == 'tablette' ? 'selected' : '' }}>Tablette</option>
                                <option value="ecran" {{ app.request.get('category') == 'ecran' ? 'selected' : '' }}>Écran</option>
                                <option value="imprimante" {{ app.request.get('category') == 'imprimante' ? 'selected' : '' }}>Imprimante</option>
                                <option value="logiciel" {{ app.request.get('category') == 'logiciel' ? 'selected' : '' }}>Logiciel</option>
                                <option value="licence" {{ app.request.get('category') == 'licence' ? 'selected' : '' }}>Licence</option>
                                <option value="serveur" {{ app.request.get('category') == 'serveur' ? 'selected' : '' }}>Serveur</option>
                                <option value="reseau" {{ app.request.get('category') == 'reseau' ? 'selected' : '' }}>Réseau</option>
                                <option value="peripherique" {{ app.request.get('category') == 'peripherique' ? 'selected' : '' }}>Périphérique</option>
                            </select>
                        </div>

                        <!-- Filtre statut -->
                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
                            <select id="status"
                                    name="status"
                                    class="block w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">Tous les statuts</option>
                                <option value="actif" {{ app.request.get('status') == 'actif' ? 'selected' : '' }}>Actif</option>
                                <option value="inactif" {{ app.request.get('status') == 'inactif' ? 'selected' : '' }}>Inactif</option>
                                <option value="maintenance" {{ app.request.get('status') == 'maintenance' ? 'selected' : '' }}>En Réparation</option>
                                <option value="stock" {{ app.request.get('status') == 'stock' ? 'selected' : '' }}>En Stock</option>
                                <option value="attribue" {{ app.request.get('status') == 'attribue' ? 'selected' : '' }}>Attribué</option>
                                <option value="retire" {{ app.request.get('status') == 'retire' ? 'selected' : '' }}>Retiré</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3 flex justify-end space-x-2">
                        <a href="{{ path('inventaire_index') }}"
                           class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            Réinitialiser
                        </a>
                        <button type="submit"
                                class="inline-flex items-center px-3 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                            Filtrer
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tableau des inventaires -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Inventaire des Actifs
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Liste complète du parc informatique avec détails et statuts
                </p>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                    <tr>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actif
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Numéro de Série
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Modèle
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Catégorie
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Statut
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Date de création
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% if actifs is empty %}
                        <tr>
                            <td colspan="8" class="px-6 py-8 text-center text-sm text-gray-500">
                                <i class="fas fa-inbox text-4xl text-gray-300 mb-2"></i>
                                <p>Aucun actif trouvé</p>
                            </td>
                        </tr>
                    {% else %}
                        {% for actif in actifs %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            {% set iconConfig = get_actif_icon(actif.category) %}
                                            <div class="h-10 w-10 rounded-lg {{ iconConfig.bgColor }} flex items-center justify-center">
                                                <i class="{{ iconConfig.icon }} {{ iconConfig.textColor }}"></i>
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">
                                                {{ actif.name }}
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                {{ actif.slug }}
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ actif.serie|default('-') }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ actif.modele|default('-') }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500 capitalize">
                                        {% if actif.category %}
                                            {{ actif.category|replace({'_': ' '}) }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set statusConfig = get_actif_status_config(actif.status) %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ statusConfig.class }}">
                                        <i class="fas {{ statusConfig.icon }} mr-1" style="font-size: 6px;"></i>
                                        {{ statusConfig.label }}
                                    </span>
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    {{ actif.createdAt ? actif.createdAt|date('d/m/Y') : '-' }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end space-x-2">
                                        <a href="{{ path('inventaire_detail', {'slug': actif.slug ,'id': actif.id}) }}"
                                           class="text-blue-600 hover:text-blue-900"
                                           title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if actifs is not empty and totalPages > 1 %}
                <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
                    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                        <div>
                            <p class="text-sm text-gray-700">
                                Affichage de
                                <span class="font-medium">1</span>
                                à
                                <span class="font-medium">{{ actifs|length }}</span>
                                sur
                                <span class="font-medium">{{ stats.total|default(0) }}</span>
                                résultats
                            </p>
                        </div>
                        <div>
                            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                {% if page > 1 %}
                                    <a href="{{ path('inventaire_index', {page: page - 1, search: app.request.get('search'), category: app.request.get('category'), status: app.request.get('status')}) }}"
                                       class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <span class="sr-only">Précédent</span>
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                {% endif %}

                                {% for p in 1..totalPages %}
                                    <a href="{{ path('inventaire_index', {page: p, search: app.request.get('search'), category: app.request.get('category'), status: app.request.get('status')}) }}"
                                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium
                               {% if p == page %}bg-blue-600 text-white{% else %}bg-white text-gray-700 hover:bg-gray-50{% endif %}">
                                        {{ p }}
                                    </a>
                                {% endfor %}

                                {% if page < totalPages %}
                                    <a href="{{ path('inventaire_index', {page: page + 1, search: app.request.get('search'), category: app.request.get('category'), status: app.request.get('status')}) }}"
                                       class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                        <span class="sr-only">Suivant</span>
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                {% endif %}
                            </nav>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
