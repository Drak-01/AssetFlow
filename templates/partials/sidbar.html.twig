<!-- ========================================
     SIDEBAR COMPONENT
     ======================================== -->
<aside id="sidebar"
       class="fixed inset-y-0 left-0 w-64 gradient-bg text-white transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out z-30 shadow-xl"
       :class="{ '-translate-x-full': !$root.sidebarOpen, 'translate-x-0': $root.sidebarOpen }"
       @click.outside="if (window.innerWidth < 1024) $root.sidebarOpen = false"
       style="height: 100vh; overflow: hidden;">

    <!-- Logo & Brand -->
    <div class="flex items-center justify-between p-6 border-b border-blue-700 dark:border-gray-700">
        <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-blue-500 dark:bg-blue-600 rounded-lg flex items-center justify-center shadow-lg">
                <i class="fas fa-server text-white text-xl"></i>
            </div>
            <div>
                <span class="text-xl font-bold block">AssetFlow</span>
                <span class="text-xs text-blue-300 dark:text-gray-400">Gestion IT</span>
            </div>
        </div>
        <!-- Close button for mobile -->
        <button class="lg:hidden text-white hover:text-blue-200 transition"
                @click="$root.toggleSidebar()">
            <i class="fas fa-times text-xl"></i>
        </button>
    </div>

    <!-- Navigation Menu -->
    <nav class="p-4 space-y-2 overflow-y-auto" style="height: calc(100vh - 180px);">
        <!-- Dashboard -->
        <a href="{{ path('dashboard_index') }}"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'dashboard' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('dashboard')">
            <i class="fas fa-chart-line w-5 transition-colors duration-200"
               :class="$root.activeSection === 'dashboard' ?
                      'text-white' :
                      'text-blue-200 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Tableau de Bord</span>
        </a>

        <!-- Inventory -->
        <a href="{{ path('inventaire_index') }}"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'inventory' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('inventory')">
            <i class="fas fa-box w-5 transition-colors duration-200"
               :class="$root.activeSection === 'inventory' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Inventaire</span>
            <span class="ml-auto bg-blue-700 dark:bg-gray-700 text-xs px-2 py-1 rounded-full transition-colors duration-200"
                  :class="$root.activeSection === 'inventory' ? 'bg-blue-600' : ''">
                  247
            </span>
        </a>

        <!-- Users -->
        <a href="{{ path('utilisateur_index') }}"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'users' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('users')">
            <i class="fas fa-users w-5 transition-colors duration-200"
               :class="$root.activeSection === 'users' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Utilisateurs</span>
            <span class="ml-auto bg-blue-700 dark:bg-gray-700 text-xs px-2 py-1 rounded-full transition-colors duration-200"
                  :class="$root.activeSection === 'users' ? 'bg-blue-600' : ''">
                  300
            </span>
        </a>

        <!-- Divider -->
        <div class="border-t border-blue-700 dark:border-gray-700 my-4"></div>

        <!-- Operations Section -->
        <div class="px-3 mb-2">
            <span class="text-xs text-blue-300 dark:text-gray-400 font-semibold uppercase tracking-wider">Opérations</span>
        </div>

        <!-- Attribution -->
        <a href="{{ path('utilisateur_attribution') }}"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'attribution' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('attribution')">
            <i class="fas fa-hand-holding w-5 transition-colors duration-200"
               :class="$root.activeSection === 'attribution' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Attribution</span>
        </a>

        <!-- Restitution -->
        <a href="{{ path('utilisateur_restitution') }}"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'restitution' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('restitution')">
            <i class="fas fa-undo w-5 transition-colors duration-200"
               :class="$root.activeSection === 'restitution' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Restitution</span>
        </a>

        <!-- Divider -->
        <div class="border-t border-blue-700 dark:border-gray-700 my-4"></div>

        <!-- Reports Section -->
        <div class="px-3 mb-2">
            <span class="text-xs text-blue-300 dark:text-gray-400 font-semibold uppercase tracking-wider">Rapports</span>
        </div>

        <!-- History -->
        <a href="#history"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'history' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('history')">
            <i class="fas fa-history w-5 transition-colors duration-200"
               :class="$root.activeSection === 'history' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Historique</span>
        </a>

        <!-- Analytics -->
        <a href="#analytics"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'analytics' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('analytics')">
            <i class="fas fa-chart-bar w-5 transition-colors duration-200"
               :class="$root.activeSection === 'analytics' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Analytiques</span>
        </a>

        <!-- Settings -->
        <a href="#settings"
           class="nav-item flex items-center space-x-3 p-3 rounded-lg transition-all duration-200 group"
           :class="$root.activeSection === 'settings' ?
                  'bg-blue-700 dark:bg-blue-600 shadow-md' :
                  'hover:bg-blue-700 dark:hover:bg-gray-700'"
           @click="$root.setActiveSection('settings')">
            <i class="fas fa-cog w-5 transition-colors duration-200"
               :class="$root.activeSection === 'settings' ?
                      'text-white' :
                      'text-blue-300 dark:text-gray-400 group-hover:text-white'"></i>
            <span class="font-medium">Paramètres</span>
        </a>
    </nav>

    <!-- User Profile -->
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-blue-700 dark:border-gray-700 bg-blue-900 dark:bg-gray-900">
        <div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-blue-800 dark:hover:bg-gray-700 transition cursor-pointer">
            <div class="relative">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 dark:from-gray-600 dark:to-gray-700 rounded-full flex items-center justify-center shadow-lg">
                    <i class="fas fa-user text-white"></i>
                </div>
                <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-400 border-2 border-blue-900 dark:border-gray-900 rounded-full"></span>
            </div>
            <div class="flex-1">
                <p class="text-sm font-semibold">Admin DSI</p>
                <p class="text-xs text-blue-300 dark:text-gray-400">admin@dsi.com</p>
            </div>
        </div>
    </div>
</aside>

<!-- Mobile Menu Button -->
<button class="lg:hidden fixed top-4 left-4 z-40 bg-blue-900 dark:bg-gray-800 text-white p-3 rounded-lg shadow-lg transition hover:bg-blue-800 dark:hover:bg-gray-700 transform hover:scale-105"
        @click="$root.toggleSidebar()"
        x-show="!$root.sidebarOpen && window.innerWidth < 1024"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform scale-50"
        x-transition:enter-end="opacity-100 transform scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 transform scale-100"
        x-transition:leave-end="opacity-0 transform scale-50">
    <i class="fas fa-bars"></i>
</button>
