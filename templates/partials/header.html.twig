<!-- ========================================
     HEADER COMPONENT WITH ALPINE.JS & DARK MODE
     ======================================== -->
<header class="fixed top-0 right-0 left-0 lg:left-64 bg-white dark:bg-gray-800 shadow-md z-20 transition-colors duration-300"
        x-data="header()">
    <div class="px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">

            <!-- Left Section: Mobile Menu + Page Title -->
            <div class="flex items-center space-x-4">
                <!-- Mobile Menu Button -->
                <button class="lg:hidden text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
                        @click="toggleSidebar()">
                    <i class="fas fa-bars text-xl"></i>
                </button>

                <!-- Page Title -->
                <div>
                    <h1 class="text-xl sm:text-2xl font-bold text-gray-800 dark:text-white" id="page-title">Tableau de Bord</h1>
                    <p class="text-xs sm:text-sm text-gray-500 dark:text-gray-400 mt-0.5" id="page-subtitle">Vue d'ensemble de vos actifs IT</p>
                </div>
            </div>

            <!-- Right Section: Actions & Notifications -->
            <div class="flex items-center space-x-2 sm:space-x-4">

                <!-- Search Button (Desktop) -->
                <button class="hidden sm:flex items-center space-x-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300 rounded-lg transition">
                    <i class="fas fa-search"></i>
                    <span class="hidden md:inline text-sm">Rechercher</span>
                </button>

                <!-- Dark Mode Toggle -->
                <div class="relative">
                    <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-gray-700 rounded-lg transition"
                            @click="toggleDarkMode()"
                            x-tooltip="'Toggle dark mode'">
                        <i class="fas fa-moon text-xl" x-show="!darkMode"></i>
                        <i class="fas fa-sun text-xl" x-show="darkMode"></i>
                    </button>
                </div>

                <!-- Notifications -->
                <div class="relative">
                    <button class="relative p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-gray-700 rounded-lg transition"
                            @click="toggleNotifications()"
                            x-tooltip="'Notifications'">
                        <i class="fas fa-bell text-xl"></i>
                        <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center"
                              x-text="notificationCount"></span>
                    </button>

                    <!-- Notifications Dropdown -->
                    <div class="absolute right-0 mt-2 w-80 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50 transition-all duration-300"
                         x-show="showNotifications"
                         x-transition:enter="transition ease-out duration-300"
                         x-transition:enter-start="opacity-0 transform scale-95"
                         x-transition:enter-end="opacity-100 transform scale-100"
                         x-transition:leave="transition ease-in duration-200"
                         x-transition:leave-start="opacity-100 transform scale-100"
                         x-transition:leave-end="opacity-0 transform scale-95"
                         @click.outside="showNotifications = false">
                        <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex justify-between items-center">
                                <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Notifications</p>
                                <button class="text-xs text-blue-600 dark:text-blue-400 hover:underline" @click="markAllAsRead()">Tout marquer comme lu</button>
                            </div>
                        </div>

                        <!-- Notification Items -->
                        <template x-for="notification in notifications" :key="notification.id">
                            <div class="flex items-start space-x-3 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 transition border-b border-gray-100 dark:border-gray-600 last:border-b-0"
                                 :class="{ 'bg-blue-50 dark:bg-gray-700': !notification.read }">
                                <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0"
                                     :class="notification.type === 'warning' ? 'bg-yellow-100 dark:bg-yellow-900' :
                                             notification.type === 'error' ? 'bg-red-100 dark:bg-red-900' :
                                             'bg-blue-100 dark:bg-blue-900'">
                                    <i class="fas"
                                       :class="notification.type === 'warning' ? 'fa-exclamation-triangle text-yellow-600 dark:text-yellow-400' :
                                               notification.type === 'error' ? 'fa-times-circle text-red-600 dark:text-red-400' :
                                               'fa-info-circle text-blue-600 dark:text-blue-400'"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-800 dark:text-white" x-text="notification.title"></p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1" x-text="notification.message"></p>
                                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-1" x-text="notification.time"></p>
                                </div>
                            </div>
                        </template>

                        <div class="px-4 py-2 border-t border-gray-200 dark:border-gray-700">
                            <a href="#" class="block text-center text-sm text-blue-600 dark:text-blue-400 hover:underline font-medium">
                                Voir toutes les notifications
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions Dropdown -->
                <div class="relative hidden sm:block">
                    <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-gray-700 rounded-lg transition"
                            @click="toggleQuickActions()"
                            x-tooltip="'Actions rapides'">
                        <i class="fas fa-th text-xl"></i>
                    </button>

                    <!-- Quick Actions Dropdown Menu -->
                    <div class="absolute right-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50 transition-all duration-300"
                         x-show="showQuickActions"
                         x-transition:enter="transition ease-out duration-300"
                         x-transition:enter-start="opacity-0 transform scale-95"
                         x-transition:enter-end="opacity-100 transform scale-100"
                         x-transition:leave="transition ease-in duration-200"
                         x-transition:leave-start="opacity-100 transform scale-100"
                         x-transition:leave-end="opacity-0 transform scale-95"
                         @click.outside="showQuickActions = false">
                        <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                            <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Actions Rapides</p>
                        </div>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                                <i class="fas fa-plus text-blue-600 dark:text-blue-400"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800 dark:text-white">Nouvel Actif</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Ajouter à l'inventaire</p>
                            </div>
                        </a>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            <div class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                                <i class="fas fa-user-plus text-green-600 dark:text-green-400"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800 dark:text-white">Nouvel Utilisateur</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Ajouter un employé</p>
                            </div>
                        </a>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                                <i class="fas fa-file-download text-purple-600 dark:text-purple-400"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800 dark:text-white">Exporter Données</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Format Excel/PDF</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- User Menu -->
                <div class="relative">
                    <button class="flex items-center space-x-2 p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-gray-700 rounded-lg transition"
                            @click="toggleUserMenu()">
                        <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-medium text-sm">
                            AD
                        </div>
                        <span class="hidden sm:inline text-sm font-medium">Admin DSI</span>
                        <i class="fas fa-chevron-down text-xs transition-transform duration-200"
                           :class="{ 'rotate-180': showUserMenu }"></i>
                    </button>

                    <!-- User Dropdown Menu -->
                    <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50 transition-all duration-300"
                         x-show="showUserMenu"
                         x-transition:enter="transition ease-out duration-300"
                         x-transition:enter-start="opacity-0 transform scale-95"
                         x-transition:enter-end="opacity-100 transform scale-100"
                         x-transition:leave="transition ease-in duration-200"
                         x-transition:leave-start="opacity-100 transform scale-100"
                         x-transition:leave-end="opacity-0 transform scale-95"
                         @click.outside="showUserMenu = false">
                        <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                            <p class="text-sm font-medium text-gray-800 dark:text-white">Admin DSI</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">admin@dsi.com</p>
                        </div>
                        <a href="#" class="flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            <i class="fas fa-user w-4"></i>
                            <span>Mon Profil</span>
                        </a>
                        <a href="#" class="flex items-center space-x-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                            <i class="fas fa-cog w-4"></i>
                            <span>Paramètres</span>
                        </a>
                        <div class="border-t border-gray-200 dark:border-gray-700 my-1"></div>
                        <a href="#" class="flex items-center space-x-2 px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900 transition">
                            <i class="fas fa-sign-out-alt w-4"></i>
                            <span>Déconnexion</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Breadcrumb (Optional) -->
    <div class="hidden lg:block px-4 sm:px-6 lg:px-8 pb-3 border-t border-gray-100 dark:border-gray-700">
        <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
            <a href="#" class="hover:text-blue-600 dark:hover:text-blue-400 transition">
                <i class="fas fa-home"></i>
            </a>
            <i class="fas fa-chevron-right text-xs text-gray-400"></i>
            <a href="#" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Gestion IT</a>
            <i class="fas fa-chevron-right text-xs text-gray-400"></i>
            <span class="text-gray-800 dark:text-white font-medium">Tableau de Bord</span>
        </div>
    </div>
</header>

<script>
    // Alpine.js Component for Header
    function header() {
        return {
            showNotifications: false,
            showQuickActions: false,
            showUserMenu: false,
            notificationCount: 3,
            notifications: [
                {
                    id: 1,
                    title: 'Nouvelle attribution',
                    message: 'MacBook Pro attribué à Sophie Martin',
                    time: 'Il y a 2h',
                    type: 'info',
                    read: false
                },
                {
                    id: 2,
                    title: 'Licence expirante',
                    message: 'Licence Adobe Creative Cloud expire dans 7 jours',
                    time: 'Il y a 5h',
                    type: 'warning',
                    read: false
                },
                {
                    id: 3,
                    title: 'Actif en réparation',
                    message: 'iPhone 15 Pro envoyé en réparation',
                    time: 'Hier',
                    type: 'error',
                    read: true
                }
            ],

            init() {
                // Apply dark mode on init
                this.applyDarkMode();
            },

            toggleDarkMode() {
                this.darkMode = !this.darkMode;
                localStorage.setItem('darkMode', this.darkMode);
                this.applyDarkMode();
            },

            applyDarkMode() {
                if (this.darkMode) {
                    document.documentElement.classList.add('dark');
                } else {
                    document.documentElement.classList.remove('dark');
                }
            },

            toggleNotifications() {
                this.showNotifications = !this.showNotifications;
                this.showQuickActions = false;
                this.showUserMenu = false;
            },

            toggleQuickActions() {
                this.showQuickActions = !this.showQuickActions;
                this.showNotifications = false;
                this.showUserMenu = false;
            },

            toggleUserMenu() {
                this.showUserMenu = !this.showUserMenu;
                this.showNotifications = false;
                this.showQuickActions = false;
            },

            markAllAsRead() {
                this.notifications.forEach(notification => notification.read = true);
                this.notificationCount = 0;
                this.showNotifications = false;
            },

            toggleSidebar() {
                // This function should be defined in your main Alpine.js component
                if (typeof window.toggleSidebar === 'function') {
                    window.toggleSidebar();
                }
            }
        }
    }

    // Initialize tooltips for Alpine.js
    document.addEventListener('alpine:init', () => {
        Alpine.directive('tooltip', (el, { expression }) => {
            const tooltip = expression || el.getAttribute('x-tooltip');
            if (tooltip) {
                el.setAttribute('title', tooltip.replace(/'/g, ''));
            }
        });
    });
</script>
